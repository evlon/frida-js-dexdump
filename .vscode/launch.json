    "version": "0.2.0",
    "configurations": [
        {
            "name": "ts-node-esm",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}",
                "-H",
                "127.0.0.1:27042",
                "-o",
                "/output"
            ],
            "runtimeArgs": [
                "--loader",
                "ts-node/esm"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "console": "externalTerminal"
        } ,
        {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}",
                "-U",
                "-o",
                "/output",
                "-d",
                "com.sample.app"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        } 
    ]
}